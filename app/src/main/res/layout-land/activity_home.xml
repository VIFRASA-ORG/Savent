<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Utenti.HomeActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <Toolbar
            android:id="@+id/toolbarStatusHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_land"
            android:background="@drawable/ic_box_status"
            android:elevation="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:logo="@drawable/green_status_icon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="top|center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/logoStatusHome"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/green_status_icon"
                            android:contentDescription="TODO"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/textStatusHome"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="@string/statusText"
                            android:textColor="@color/blueButton"
                            android:textSize="35dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/blueButton"
                            android:textSize="24dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonNotification"
                            android:layout_width="@dimen/icon_status_bar"
                            android:layout_height="@dimen/icon_status_bar"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/ic_baseline_notifications_24"
                            android:gravity="top" />

                        <Button
                            android:id="@+id/buttonSetting"
                            android:layout_width="@dimen/icon_status_bar"
                            android:layout_height="@dimen/icon_status_bar"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/ic_baseline_settings_24"
                            android:gravity="top" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </Toolbar>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/botton_navigation" />


</RelativeLayout>


